@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<title>@ViewData["Title"] - SMS</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/SMS.styles.css" asp-append-version="true" />
<style>
    body{
        background-color: #181818;
    }

    .my-form-control {
        position: relative;
        margin-top: 20px;
        margin-bottom: 30px;
        width: 298px;
        text-align: center;
    }

        .my-form-control input {
            background-color: transparent;
            border: 0;
            border-bottom: 2px white solid;
            display: block;
            width: 100%;
            padding: 10px 0;
            font-size: 18px;
            color: white;
            display: inline-block;
        }

            .my-form-control input:focus,
            .my-form-control input:valid {
                outline: 0;
                border-bottom-color: white;
            }

        .my-form-control label {
            position: absolute;
            top: 10px;
            left: 0;
            pointer-events: none;
        }

            .my-form-control label span {
                display: inline-block;
                font-size: 18px;
                min-width: 5px;
                color: white;
                transition: 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            }

        .my-form-control input:focus + label span,
        .my-form-control input:valid + label span {
            color: orange;
            transform: translateY(-30px);
        }

    .button-login {
        --color: #2E8B57;
        padding: 0.8em 1.7em;
        background-color: transparent;
        border-radius: .3em;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: .5s;
        font-weight: 400;
        font-size: 17px;
        border: 3px solid;
        font-family: inherit;
        text-transform: uppercase;
        color: var(--color);
        z-index: 1;
    }

    .button-register {
        --color: #B22222;
        padding: 0.8em 1.7em;
        background-color: transparent;
        border-radius: .3em;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: .5s;
        font-weight: 400;
        font-size: 17px;
        border: 3px solid;
        font-family: inherit;
        text-transform: uppercase;
        color: var(--color);
        z-index: 1;
    }

        .button-login::before, .button-register::before, .button-login::after, .button-register::after {
            content: '';
            display: block;
            width: 50px;
            height: 50px;
            transform: translate(-50%, -50%);
            position: absolute;
            border-radius: 50%;
            z-index: -1;
            background-color: var(--color);
            transition: 1s ease;
        }

        .button-login::before, .button-register::before {
            top: -1em;
            left: -1em;
        }

        .button-login::after, .button-register::after {
            left: calc(100% + 1em);
            top: calc(100% + 1em);
        }

        .button-login:hover::before, .button-register:hover::before, .button-login:hover::after, .button-register:hover::after {
            height: 410px;
            width: 410px;
        }

        .button-login:hover, .button-register:hover {
            color: rgb(10, 25, 30);
        }

        .button-login:active, .button-register:active {
            filter: brightness(.8);
        }

    .card {
        --background: linear-gradient(to left, #f7ba2b 0%, #ea5358 100%);
        width:368px;
        height:486.97px;
        padding: 5px;
        border-radius: 1rem;
        overflow: visible;
        background: #f7ba2b;
        background: var(--background);
        position: relative;
        z-index: 1;
    }

        .card::after {
            position: absolute;
            content: "";
            top: 30px;
            left: 0;
            right: 0;
            z-index: -1;
            height: 100%;
            width: 100%;
            transform: scale(0.8);
            filter: blur(25px);
            background: #f7ba2b;
            background: var(--background);
            transition: opacity .5s;
        }

    .card-info {
        --color: #181818;
        background: var(--color);
        color: var(--color);
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        overflow: visible;
        border-radius: .7rem;
    }

    .h3.mb-3.font-weight-normal {
        background-image: linear-gradient(to left, #f7ba2b 0%, #ea5358 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

</style>

<section>
    <a class="button-login btn btn-block" asp-area="" asp-controller="Home" asp-action="Index" style="float: right; margin:12px;"><b>Home</b></a>
    <div class="row d-flex justify-content-center col-12">
        <div class="card">
            <div class="card-info">  
            <form id="account" method="post" class="py-2">
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 font-weight-normal"> Login</h1>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex justify-content-center">
                    <div class="my-form-control d-flex justify-content-center">
                        <input asp-for="Input.Email" type="value" required autofocus autocomplete="username" aria-required="true" />
                        <label>
                            <span style="transition-delay:0ms">E</span>
                            <span style="transition-delay:50ms">m</span>
                            <span style="transition-delay:100ms">a</span>
                            <span style="transition-delay:150ms">i</span>
                            <span style="transition-delay:200ms">l</span>
                        </label>   
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="my-form-control">
                        <input asp-for="Input.Password" type="password" required autocomplete="current-password" aria-required="true" />
                        <label>
                            <span style="transition-delay:0ms">P</span>
                            <span style="transition-delay:50ms">a</span>
                            <span style="transition-delay:100ms">s</span>
                            <span style="transition-delay:150ms">s</span>
                            <span style="transition-delay:200ms">w</span>
                            <span style="transition-delay:250ms">o</span>
                            <span style="transition-delay:300ms">r</span>
                            <span style="transition-delay:350ms">d</span>
                        </label>    
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-group row d-flex justify-content-center mt-6">
                    <button class="button-login" type="submit"><b>Login</b></button>
                </div>
                <div class="form-group row d-flex justify-content-center mt-3">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="button-register btn btn-block"><b>Register</b></a>
                </div>
            </form>
                </div>
            </div>
        </div>
 
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>